            context.Value.SetUnitTo(EUnitType.Enthalpy, (int)methodEnthalpyUnitCombo.SelectedValue);
            context.Value.SetUnitTo(EUnitType.Heat, (int)methodCapaUnitCombo.SelectedValue);
