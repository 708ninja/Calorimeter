    public enum ETestMessage
    {
        None,
        Next,
        Reset
    }

    public enum ETestStep
    {
        None,
        Preparation,
        Judgement,
        Integration
    }

    public enum EWorkSheet
    {
        Title,
        I1,
        I2,
        I3,
        I4,
        I5,
        I6,
        I7
    }

