        private double GetBarPressureRatioBar(EUnitPressure to)
        {
            double ratio = 0;

            switch (to)
            {
                case EUnitPressure.Bar:
                    ratio = 1.0;
                    break;

                case EUnitPressure.kPa:
                    ratio = 100.0;
                    break;

                case EUnitPressure.MPa:
                    ratio = 0.1;
                    break;

                case EUnitPressure.kg_cm2:
