        private double GetBarPressureRatiokPa(EUnitPressure to)
        {
            double ratio = 0;

            switch (to)
            {
                case EUnitPressure.Bar:
                    ratio = 1.0 / 100.0;
                    break;

                case EUnitPressure.kPa:
                    ratio = 1.0;
                    break;

                case EUnitPressure.MPa:
                    ratio = 1.0 / 100.0 * 0.1;
                    break;

                case EUnitPressure.kg_cm2:
                    ratio = 1.0 / 100.0 * 1.019716;
                    break;
            }

            return ratio;
        }

