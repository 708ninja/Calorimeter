                case EUnitAtmPressure.kPa:
                    ratio = GetAtmPressureRatiokPa(to);
                    break;

                case EUnitAtmPressure.mmHg:  //* Default
                    ratio = GetAtmPressureRatiommHg(to);
                    break;
            }

            return ratio;
        }

